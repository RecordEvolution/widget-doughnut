{
    "name": "@record-evolution/widget-doughnut",
    "description": "REWidget widget-doughnut",
    "license": "MIT",
    "author": "widget-doughnut",
    "version": "1.5.16",
    "type": "module",
    "main": "dist/widget-doughnut.js",
    "types": "dist/src/widget-doughnut.d.ts",
    "files": [
        "dist",
        "src",
        "thumbnail.png"
    ],
    "scripts": {
        "analyze": "cem analyze --litelement",
        "start": "concurrently -k -r \"npm run watch\" \"wds\"",
        "build": "rollup -c rollup.config.js",
        "watch": "rollup -w -c rollup.config.js",
        "link": "npm run build && npm link && cd ../RESWARM/frontend && npm link @record-evolution/widget-doughnut",
        "unlink": "npm unlink --global && cd ../RESWARM/frontend && npm unlink @record-evolution/widget-doughnut && npm i @record-evolution/widget-doughnut",
        "types": "cat src/definition-schema.json | json2ts > src/definition-schema.d.ts",
        "start:build": "npm run build && es-dev-server --root-dir dist --app-index index.html --compatibility none --open",
        "release": "npm run build && npm run types && npm version patch --tag-version-prefix='' && git push && git push --tag && npm run build"
    },
    "dependencies": {
        "echarts": "^6.0.0",
        "lit": "^3.3.1"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.10.10",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-replace": "^6.0.2",
        "@rollup/plugin-typescript": "^12.1.4",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@web/dev-server": "^0.4.6",
        "concurrently": "^9.1.2",
        "deepmerge": "^4.3.1",
        "es-dev-server": "^2.1.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.5",
        "husky": "^9.1.7",
        "json-schema-to-typescript": "^15.0.4",
        "lint-staged": "^16.2.3",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "rollup": "^4.52.4",
        "tslib": "^2.8.1",
        "typescript": "5.9.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RecordEvolution/widget-doughnut.git"
    },
    "keywords": [
        "widget",
        "doughnut"
    ],
    "bugs": {
        "url": "https://github.com/RecordEvolution/widget-doughnut/issues"
    },
    "homepage": "https://github.com/RecordEvolution/widget-doughnut#readme"
}
